<h1>Logout</h1>
<%= form_with  url: logout_path do |f| %>
  <% if @boolean ==false %>
    <div class='alert alert-danger'>
    <div><%= @message%></div>
    </div>
    <% else %>
    <div><%= @message%></div>
    
  <% end %>

  <div class="mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  
  <div class="mb-3">
    <%= f.label :password %><br/>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="mb-3">
  <%= f.submit "Logout", class: "btn btn-primary" %>
  </div>
  <div class="mb-3">
  <a href ="/login" class= "btn btn-primary">Login</a>
  </div>
<% end %>
